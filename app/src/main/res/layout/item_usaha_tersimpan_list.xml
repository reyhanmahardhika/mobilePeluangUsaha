<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="8dp"
    android:focusable="true"
    android:layout_marginBottom="10dp"
    android:clickable="true"
    app:cardCornerRadius="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imgUsahaTersimpan"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_peluang_usaha"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/imgUsahaTersimpan">
                <TextView
                    android:id="@+id/txtNamaUsahaTersimpan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.Compat.Notification.Title"
                    android:layout_marginBottom="5dp"
                    android:textSize="10pt"
                    android:ellipsize="end"
                    android:text="12389fadsjlk"/>
                <TextView
                    android:id="@+id/txtModalUsahaTersimpan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    style="@style/TextAppearance.AppCompat.Widget.ActionMode.Subtitle"
                    android:text="Modal: Rp. 20000000"/>
            </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>